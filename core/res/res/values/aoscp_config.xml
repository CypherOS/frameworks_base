<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <!-- Is Advanced Reboot enabled? -->
    <bool name="config_advanced_reboot">true</bool>

    <!-- The list of components which should be automatically disabled. -->
    <string-array name="config_disabledComponents" translatable="false">
    </string-array>

    <!-- The list of components which should be forced to be enabled. -->
    <string-array name="config_forceEnabledComponents" translatable="false">
    </string-array>

    <!-- Does the notification LED support multiple colors -->
    <bool name="config_multiColorNotificationLed">false</bool>

    <!-- Is the battery LED intrusive? -->
    <bool name="config_intrusiveBatteryLed">false</bool>

    <!-- Does the battery LED support multiple colors? -->
    <bool name="config_multiColorBatteryLed">false</bool>

    <!-- Do the battery/notification LEDs support pulsing?
         Used to decide if we show pulse settings -->
    <bool name="config_ledCanPulse">true</bool>

    <!-- Vibrator pattern for notifications while alerts
         are disabled -->
    <integer-array name="config_notificationNoAlertsVibePattern">
        <item>0</item>
        <item>50</item>
        <item>100</item>
        <item>50</item>
    </integer-array>

    <!-- Single handed mode config -->
    <bool name="single_hand_mode">true</bool>
	
	<!-- Support in Surfaceflinger for blur layers.
         NOTE: This requires additional hardware-specific code. -->
    <bool name="config_uiBlurEnabled">false</bool>
	
	<!-- Extended Boosts for QPerformance -->
 
    <!-- Whether cpu boost is enabled right after boot -->
    <bool name="config_enableCpuBoostOnBoot">false</bool>
  
    <!-- Duration of the boost in seconds, default is 30 -->
    <integer name="onbootboost_duration">0</integer>
  
    <!-- Boost parameters which get passed to QPerformance -->
    <integer-array name="onbootboost_param_value"/>
	
	<!-- Whether the device supports navigation bar toggling
         and key disabling.	-->
    <bool name="config_supportHardwareKeyDisable">false</bool>
	
</resources>
